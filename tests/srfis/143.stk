;; simple test:

(test "fixnum width"
      #t
      (= fx-width (fixnum-width)))

(test "width and greatest fixnum"
      #t
      (= fx-greatest (- (expt 2 (- fx-width 1))  1)))

(test "is greatest-fixnum a fixnum?"
      #t
      (fixnum? fx-greatest))

(test "is greatest-fixnum +1 a fixnum?"
      #f
      (fixnum? (+ fx-greatest 1)))

(test "is greatest-fixnum a fixnum?"
      #t
      (fixnum? fx-least))

(test "is least-fixnum -1 a fixnum?"
      #f
      (fixnum? (- fx-least 1)))

