(require "test")

(test-section "Boxes")


(test "make-box"
      (with-output-to-string (lambda () (write (make-box 10))))
      "#&10")
(test "make-constant-box"
      (with-output-to-string (lambda () (write (make-constant-box 10))))
      "#&10")

(test "reader"
      (eval-from-string "#&100")
      (make-box 100))

(test "equal?.1"
      (equal? 100 (make-box 100))
      #f)

(test "equal?.2"
      (equal? #&100 (make-box 100))
      #t)

(test-section-end)

      