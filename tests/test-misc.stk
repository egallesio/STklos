;;----------------------------------------------------------------------
(test-subsection "match-case & match-lambda")


(test "match-case.1"
      'bar
      (match-case '(a b a)
                  ((?x ?x) 'foo)
                  ((?x ?- ?x) 'bar)))

(test "match-case.2"
      '(length=3 d (b c) a)
      (match-case '(a (b c) d)
                  ((?x ?y) (list 'length=2 y x))
                  ((?x ?y ?z) (list 'length=3 z y x))))

(test "match-case.3"
      'bar
      (match-case '(a b c)
                  ((a (not (kwote b)) c) 'foo)
                  ((a (or (kwote a) (kwote b)) c) 'bar)))

(test "match-lambda.1"
      'bar
      ((match-lambda
         ((?x ?x) 'foo)
         ((?x ?- ?x) 'bar))
       '(a b a)))


(test "match-lambda.2"
      '(length=3 d (b c) a)
      ((match-lambda
         ((?x ?y) (list 'length=2 y x))
         ((?x ?y ?z) (list 'length=3 z y x)))
       '(a (b c) d)))

