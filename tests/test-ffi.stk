(require "test")

(test-section "FFI")

;;; NULL pointer and STRTOL

(test "null cpointer" #t (cpointer-null? (%make-cpointer-null)))

(define-external strtol(:string :pointer :int)
  :return-type :long)

;; base 8
(test "strtol.1"
      513
      (strtol "1001" (%make-cpointer-null) 8))

;; base 10
(test "strtol.2"
      1001
      (strtol "1001" (%make-cpointer-null) 10))

;; base 2
(test "strtol.3"
      9
      (strtol "1001" (%make-cpointer-null) 2))

;; base 16
(test "strtol.4"
      6699
      (strtol "1a2b" (%make-cpointer-null) 16))

;;; RINDEX
(define-external %rindex (:string :int)
  :entry-name "strrchr"
  :return-type :string)

(define (rindex str char)
  (%rindex str (char->integer char)))

;;; STRLEN
(define-external strlen(:string)
  :return-type :int)


(test "rindex.1"
      "/d"
      (rindex "/a/b/c/d" #\/))


(test "rindex.2"
      (void)
      (rindex "/a/b/c/d" #\A))

(test "strlen.1"
      0
      (strlen ""))

(test "strlen.2"
      5
      (strlen "abcde"))

(test-section-end)
