;; 12-Aug-2020 (v1.40) -- Use parameter object instead
(define (%set-std-port!  index port)
  (case index
    ((0) (current-input-port port))
    ((1) (current-output-port port))
    ((2) (current-error-port port))
    (else (error '%set-std-port! "bad port number" index))))
