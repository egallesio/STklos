;  (let recur ((lis lis))           ; if you are willing to
;    (if (null-list? lis) (values lis lis)  ; push N stack frames & do N
;        (let ((elt (car lis)))         ; SET-CDR! writes, where N is
;          (receive (in out) (recur (cdr lis))  ; the length of LIS.
;            (cond ((pred elt)
;                   (set-cdr! lis in)
