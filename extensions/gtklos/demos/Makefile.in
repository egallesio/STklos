SRC= demos.stk \
     button.stk checkbutton.stk  colorchooser.stk   \
     combobox.stk dialog.stk entry1.stk entry2.stk  \
     entry3.stk filechooser.stk fontchooser.stk     \
     frame.stk grid1.stk grid2.stk                  \
     image1.stk image2.stk label.stk menu1.stk      \
     menu2.stk menu3.stk progress.stk scale.stk     \
     separator.stk text.stk

#    canvas1.stk canvas2.stk
#    event.stk
#    fileselector.stk fontselector.stk
#    radiobutton.stk \
#    scroll1.stk scroll2.stk sedit.stk toolbar.stk

EXE=$(SRC:.stk=)

%: %.stk demos-utils.stk
	stklos-compile -c -o $* $<

all: 	$(EXE)
	@echo $(EXE) > all-demos

install:
	@echo "Demos are not installed"

clean:
	/bin/rm -f $(EXE) *~ all-demos

distclean:
	/bin/rm -f stklos-gtklos.so Makefile

demo: all
	./demos
