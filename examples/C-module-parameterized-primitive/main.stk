;; We don't use (define-module ...) here, because the module
;; has already been created in the C file.
;; This file will be compiled as bytecode, named
;; "descriptive-statistics-incl.c", and included in the C file
;; "descriptive-statistics.c" (see the #include directive there!)
;; So we just select the module and do exports, imports and
;; definitions.

(import descriptive-statistics)

(let ((x 15)
      (y 20)
      (arith-mean (make-mean :arithmetic))
      (geom-mean  (make-mean :geometric))
      (harm-mean (make-mean :harmonic)))
  (format #t "Arithmetic mean = ~a\n" (arith-mean x y))
  (format #t "Geometric mean = ~a\n"  (geom-mean x y))
  (format #t "Harmonic mean = ~a\n"   (harm-mean x y)))
